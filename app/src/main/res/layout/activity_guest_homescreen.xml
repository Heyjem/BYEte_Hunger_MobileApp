<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen_background2"
    android:backgroundTint="#99000000"
    android:backgroundTintMode="src_over"
    tools:context=".Guest_Homescreen">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_homescreen"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC91E"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button12"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:backgroundTint="#909090"
                android:clickable="false"
                android:drawableRight="@drawable/resize_chat_with_us"
                android:elevation="4dp"
                android:text="CHAT WITH US!"
                android:textColor="#484848"
                android:textSize="12sp"
                android:translationZ="10dp"
                app:cornerRadius="11px" />

            <Button
                android:id="@+id/button13"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="#909090"
                android:clickable="false"
                android:text="TRACK DONATIONS"
                android:textColor="#484848"
                android:textSize="12sp"
                app:cornerRadius="11dp" />

        </LinearLayout>

        <Button
            android:id="@+id/button14"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#909090"
            android:clickable="false"
            android:elevation="4dp"
            android:text="DONATE NOW"
            android:textColor="#484848"
            android:textSize="12sp"
            app:cornerRadius="11dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:iss_auto_cycle="true"
                        app:iss_corner_radius="10"
                        app:iss_delay="1000"
                        app:iss_period="1000"
                        app:iss_title_background="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5.5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="|"
                    android:textColor="#FFC91E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/newsFeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:letterSpacing="0.27"
                    android:text="NEWS FEED"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/newsF_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/montserrat_regular"
                android:justificationMode="inter_word"
                android:text="       Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec aliquet, ipsum vel fringilla lobortis, lectus ligula ultrices massa, ut hendrerit ante quam sed nisl. Sed vitae augue nec orci auctor eleifend. Integer vestibulum sagittis aliquam. Quisque luctus purus ut ex euismod tristique. Aenean elementum libero ut semper luctus."
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/newsF_Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/newsF_Content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/montserrat_regular"
                android:justificationMode="inter_word"
                android:text="       Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec aliquet, ipsum vel fringilla lobortis, lectus ligula ultrices massa, ut hendrerit ante quam sed nisl. Sed vitae augue nec orci auctor eleifend. Integer vestibulum sagittis aliquam. Quisque luctus purus ut ex euismod tristique. Aenean elementum libero ut semper luctus."
                android:textColor="@color/white"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:letterSpacing="0.27"
                    android:text="----------"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:letterSpacing="0.40"
                    android:text="TRIVIA!"
                    android:textColor="#FFC91E"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:letterSpacing="0.27"
                    android:text="----------"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    tools:srcCompat="@drawable/trivia_icon" />

                <TextView
                    android:id="@+id/Trivia_Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:justificationMode="inter_word"
                    android:text="    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec aliquet, ipsum vel fringilla lobortis, lectus ligula ultrices massa, ut hendrerit ante quam sed nisl. Sed vitae augue nec orci auctor eleifend. Integer vestibulum sagittis aliquam. Quisque luctus purus ut ex euismod tristique. Aenean elementum libero ut semper luctus."
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25.5dp"
                android:background="#FFFFFF" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="#2B2A2A"
                android:translationZ="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="ABOUT US"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp" />


                <View
                    android:layout_width="39dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="#FFC91E" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    tools:srcCompat="@drawable/client_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Founder: Mr. Mac Florendo"
                    android:textAlignment="center"
                    android:textColor="#FFC91E"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:justificationMode="inter_word"
                    android:text="       Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec aliquet, ipsum vel fringilla lobortis, lectus ligula ultrices massa, ut hendrerit ante quam sed nisl. Sed vitae augue nec orci auctor eleifend. Integer vestibulum sagittis aliquam. Quisque luctus purus ut ex euismod tristique. Aenean elementum libero ut semper luctus. Praesent elementum feugiat tortor, scelerisque laoreet felis aliquet eget. Pellentesque at fringilla sapien, eu aliquet ligula. Sed faucibus tellus congue, rhoncus lorem a, ultricies neque. In tristique aliquam magna, non tristique felis auctor at. Nullam vehicula mollis vulputate. Nullam quis pulvinar sapien. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

            <View
                android:layout_width="39dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#2EB674" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="57dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="For Frequently Ask Questions"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_guesthomescreen_clickhere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Click Here"
                    android:textAlignment="center"
                    android:textColor="#FFC91E"
                    android:textSize="13sp" />

            </LinearLayout>

            <Button
                android:id="@+id/button_guesthomescreen_register"
                android:layout_width="233dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/yellowbutton_rounded_corners"
                android:elevation="4dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="BECOME A DONOR NOW!"
                android:translationZ="20dp"
                android:textColor="#525252" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>