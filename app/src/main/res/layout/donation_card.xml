<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:onClick="expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#2eb674"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:contentPadding="20dp">

        <LinearLayout
            android:id="@+id/layout_donationcard_front"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="1234567"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Date Added: "
                android:textSize="14sp"
                android:textColor="@color/black"/>
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="180dp"
                android:fontFamily="@font/montserrat_regular"
                android:textAlignment="center"
                android:text="July 31, 2022"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tv_donationcard_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="10dp"
                android:text="ITEM:"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_donationcard_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="10dp"
                android:text="TYPE: "
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_donationcard_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="10dp"
                android:text="WEIGHT:"
                android:textSize="12sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tv_donationcard_dateofpurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="10dp"
                android:text="DATE OF PURCHASE:"
                android:textSize="12sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tv_donationcard_expirationdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="10dp"
                android:text="EXPIRATION DATE:"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="165dp"
                android:layout_height="135dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_donationcard_itemdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="10dp"
                    android:text="Lorem ipsum"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_donationcard_typedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="12dp"
                    android:text="Lorem ipsum"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_donationcard_weightdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="12dp"
                    android:text="00 KG"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_donationcard_dateofpurchasedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="14dp"
                    android:text="MM / DD / YY (OPTIONAL)"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_donationcard_expirationdatedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="14dp"
                    android:text="MM / DD / YY (OPTIONAL)"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:orientation="vertical"
                android:layout_marginTop="200dp">

                <TextView
                    android:id="@+id/tv_donationcard_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="NOTES:"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_donationcard_notesdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="5dp"
                    android:text="Lorem Ipsum rambu rat gr abean glakin yan lodsah naolma lakiang ari. Lorem Ipsum rambu rat gr abean glakin yan lodsah naolma lakiang ari. "
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_donationcard_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="ATTACHED IMAGE:"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />

                <ImageView
                    android:id="@+id/imageView_donationcard"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:elevation="15dp"
                    android:background="@drawable/profile_user"/>

                <Button
                    android:id="@+id/btn_donationcard_track"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:background="@drawable/yellowbutton_rounded_corners"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="93dp"
                    android:elevation="15dp"
                    android:text="TRACK"
                    android:textColor="@color/white"/>


            </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>